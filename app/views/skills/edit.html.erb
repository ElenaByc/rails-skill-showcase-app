<h1 class="text-primary text-center mb-4">Edit Skill</h1>

<div class="row justify-content-center">
  <div class="col-md-8 col-lg-6">
    <%= form_with model: @skill, url: user_skill_path(@skill.created_by, @skill), method: :patch, local: true do |form| %>
  <% if @skill.errors.any? %>
    <div class="text-danger mb-3">
      <h6 class="text-danger"><%= pluralize(@skill.errors.count, "error") %> prohibited this skill from being saved:</h6>
      <ul class="mb-0">
        <% @skill.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control", autocomplete: "off" %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, rows: 4, class: "form-control" %>
  </div>

  <div class="mb-3 d-flex justify-content-center">
    <%= link_to "Cancel", user_skills_path(@skill.created_by), class: "btn btn-outline-secondary me-4" %>
    <%= form.submit "Update Skill", class: "btn btn-primary" %>
  </div>
  <% end %>
  </div>
</div>
