<h1 class="text-primary text-center mb-4">Manage Skills</h1>
<% @skills.each do |skill| %>
  <div class="card mb-3">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center">
      <div class="mb-2 mb-md-0">
        <h5 class="card-title mb-0">
          <strong><%= skill.name %></strong> - <%= pluralize(skill.certificates.where(user_id: @user.id).count, "certificate") %>
        </h5>
      </div>
      <div class="d-flex gap-2">
        <%= link_to "Details", skill_path(skill), class: "btn btn-outline-primary btn-sm" %>
        <%= link_to "Edit", edit_skill_for_user_path(@user, skill), class: "btn btn-outline-primary btn-sm" %>
        <% if skill.certificates.where(user_id: @user.id).any? %>
          <button class="btn btn-secondary btn-sm disabled">Delete</button>
        <% else %>
          <%= link_to "Delete", delete_skill_for_user_path(@user, skill), class: "btn btn-outline-danger btn-sm", data: { turbo_method: :delete, turbo_confirm: "You are about to delete '#{skill.name}' skill, are you sure?" } %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<br>

<p class="text-center"><%= link_to "Create New Skill", new_skill_for_user_path(@user), class: "btn btn-primary" %></p>