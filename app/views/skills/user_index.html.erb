<h1>Manage Skills</h1>

<ul>
  <% @skills.each do |skill| %>
    <li>
      <%= skill.name %> â€”
      <%= pluralize(skill.certificates.where(user_id: @user.id).count, "certificate") %><br>

      <%= link_to "Edit", edit_skill_path(skill) %> |

      <% if skill.certificates.where(user_id: @user.id).any? %>
        <span>Delete (disabled)</span>
      <% else %>
        <%= link_to "Delete", skill_path(skill), method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<p><%= link_to "Create New Skill", new_skill_path %></p>
<p><%= link_to "Return to Dashboard", user_dashboard_path(@user) %></p>