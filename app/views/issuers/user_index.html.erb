<h1 class="text-primary text-center mb-4">Manage Issuers</h1>
<% @issuers.each do |issuer| %>
  <div class="card mb-3">
    <div class="card-body d-flex flex-column flex-md-row justify-content-between align-items-center">
      <div class="mb-2 mb-md-0">
        <h5 class="card-title mb-0">
          <strong><%= issuer.name %></strong> - <%= pluralize(issuer.certificates.where(user_id: @user.id).count, "certificate") %>
        </h5>
      </div>
      <div class="d-flex gap-2">
        <%= link_to "Details", issuer_path(issuer), class: "btn btn-outline-primary btn-sm" %>
        <%= link_to "Edit", edit_issuer_for_user_path(@user, issuer), class: "btn btn-outline-primary btn-sm" %>
        <% if issuer.certificates.where(user_id: @user.id).any? %>
          <button class="btn btn-secondary btn-sm disabled">Delete</button>
        <% else %>
          <button type="button" class="btn btn-outline-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteIssuerModal<%= issuer.id %>">
            Delete
          </button>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<br>

<p class="text-center"><%= link_to "Create New Issuer", new_issuer_for_user_path(@user), class: "btn btn-primary" %></p>

<!-- Delete Confirmation Modals -->
<% @issuers.each do |issuer| %>
  <% unless issuer.certificates.where(user_id: @user.id).any? %>
    <div class="modal fade" id="deleteIssuerModal<%= issuer.id %>" tabindex="-1" aria-labelledby="deleteIssuerModalLabel<%= issuer.id %>" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="deleteIssuerModalLabel<%= issuer.id %>">Confirm Delete</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body">
            <p>You are about to delete the issuer <strong>"<%= issuer.name %>"</strong>.</p>
            <p class="text-danger">This action cannot be undone.</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
            <%= link_to "Delete Issuer", delete_issuer_for_user_path(@user, issuer), class: "btn btn-outline-danger", data: { turbo_method: :delete } %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<% end %>