<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1 class="text-primary text-center mb-4">Login</h1>
      <%= form_with(url: login_path, local: true, class: "needs-validation", novalidate: true) do |form| %>
        <div class="mb-3">
          <%= form.label :email, "Email", class: "form-label" %>
          <%= form.email_field :email, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="mb-3">
          <%= form.label :password, "Password", class: "form-label" %>
          <%= form.password_field :password, class: "form-control", required: true, autocomplete: "off" %>
        </div>

        <div class="text-center mb-5">
          <%= form.submit "Login", class: "btn btn-primary px-4" %>
        </div>
      <% end %>

      <div class="text-center">
        <p>Don't have an account? <%= link_to "Register here", register_path, class: "btn btn-outline-primary btn-sm ms-2" %></p>
      </div>
    </div>
  </div>
</div>
